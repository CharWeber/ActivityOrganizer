@{
  Layout = "_Layout";
}

@using Gym.Models

<h1>List of Activties</h1>

@if (Model.Count == 0)
{
  <h3>No Activities are scheduled at this time</h3>
}

@foreach(Activity activity in Model)
{
  <h3>@Html.ActionLink($"{activity.Name}", "Details", new {id = activity.ActivityId})</h3>
  <hr>
  <p>Activity Type: @activity.Type</p>
  <p>Max Players: @activity.MaxPlayers</p>
}

@Html.ActionLink("Add Activity", "Create", "Activities")